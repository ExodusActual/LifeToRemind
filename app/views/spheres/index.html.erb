<div class="container">
  <h3>Âmbitos</h3>

  <% @spheres.each do |sphere| %>

    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-header">Âmbito</h5>
          <div class="padding-all">
            <h5 class="card-title"><%= sphere.name %></h5>
            <%= link_to "Editar",
                        edit_sphere_path(sphere),
                        class: "btn btn-primary" %>
            <%= link_to "Remover",
                        sphere,
                        method: :delete,
                        data: {confirm: "Tem certeza que deseja remover o âmbito #{sphere.name}? Ao remover, tambem serão excluidos todos os objetivos estratégicos relacionados ao mesmo."},
                        class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to "Novo Âmbito", new_sphere_path, class: "btn btn-primary" %>

</div>
