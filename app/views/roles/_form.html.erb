<% @role.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>

<%= form_for @role do |form| %>
  <div class="search-group-1 m-t-33">
    <%= form.text_field :name, class: "search-field-1" %>
    <%= form.text_area :description, class: "search-field-1" %>
    <%= button_tag class: "icon-1" do %>
      <i class="lnr lnr-arrow-right"></i>
    <% end %>
  </div>
<% end %>
