<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:info] %>
  <div class="alert alert-info" role="alert">
    <%= flash[:info] %>
  </div>
<% end %>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <td>Propósito de vida</td>
      <td>Quem sou eu</td>
      <td>Por que existo</td>
      <td>Data</td>
    </tr>
  </thead>
  <tbody>
    <%= render @missions %>
  </tbody>
</table>

<%= link_to "Nova Missão", new_mission_path, class: "btn btn-primary" %>