<div class="row">
  <div class="col-border">
    <div class="card">
      <div class="card-body">
        <div class="padding-all">
          <h5 class="card-title">Nome da meta: <%= cardgoal.name %> | <%= cardgoal.progress %>% Conclu√≠do
            <%= link_to "Atividades", activities_path(goal_id: cardgoal.id), class: "btn btn-primary" %>
            <%= link_to "+ Atividade", new_activity_path(goal_id: cardgoal.id), class: "btn btn-success" %>
            <%= link_to "Editar", edit_goal_path(cardgoal, :objective_id => cardgoal.objective), class: "btn btn-default" %>
            <%= link_to "Remover", cardgoal, method: :delete, data: {confirm: 'Tem certeza que quer remover essa meta?'}, class: "btn btn-danger" %>
          </h5>
          <h5>Atividades a completar</h5>
          <hr/>
          <% cardgoal.activities.each do |activity| %>
            <% if !activity.checked %>
              <p><%= activity.title %></p>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>