<% @objective.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger" role="alert">
    <%= msg %>
  </div>
<% end %>


<%= form_with(model: objective, local: true) do |form| %>

  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= form.label "Nome do seu objetivo estratégico" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= form.label "Âmbito" %>
        <%= form.collection_select :sphere_id, @spheres  || [], :id, :name, {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <%= form.submit "Criar Objetivo Estratégico", class: "btn btn-primary" %>

<% end %>

