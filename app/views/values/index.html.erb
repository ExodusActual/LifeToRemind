<div class="container">
  <p id="notice"><%= notice %></p>
  <h3 class="p-t-50 p-b-20">Editar valores</h3>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <% @values.each do |value| %>
      <div class="offer offer-radius offer-success">
        <div class="shape">
          <div class="shape-text">
          </div>
        </div>
        <div class="offer-content">
          <h3 class="lead color-dark">
            <%= value.name %>
          </h3>
          <%= link_to "", edit_value_path(value), class: "btn btn-default lnr lnr-pencil" %>
          <%= link_to "", value, method: :delete, class: "btn btn-danger lnr lnr-circle-minus" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

